import java.util.Scanner;

public class OnlineExam {
    // Default username and password
    private static final String USERNAME = "admin";
    private static final String PASSWORD = "admin123";
    
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        // Login
        System.out.println("Welcome to the online exam!");
        System.out.print("Username: ");
        String username = sc.nextLine();
        System.out.print("Password: ");
        String password = sc.nextLine();
        
        if (username.equals(USERNAME) && password.equals(PASSWORD)) {
            System.out.println("Login successful!");
        } else {
            System.out.println("Invalid username or password. Exiting...");
            return;
        }
        
        // Profile and password update
        System.out.println("Would you like to update your profile or password? (y/n)");
        String choice = sc.nextLine();
        
        if (choice.equalsIgnoreCase("y")) {
            System.out.println("1. Update profile");
            System.out.println("2. Change password");
            System.out.print("Enter your choice: ");
            int updateChoice = sc.nextInt();
            sc.nextLine();
            
            if (updateChoice == 1) {
                System.out.print("Enter your new name: ");
                String newName = sc.nextLine();
                System.out.print("Enter your new email address: ");
                String newEmail = sc.nextLine();
                System.out.println("Profile updated successfully!");
            } else if (updateChoice == 2) {
                System.out.print("Enter your current password: ");
                String currentPassword = sc.nextLine();
                
                if (currentPassword.equals(PASSWORD)) {
                    System.out.print("Enter your new password: ");
                    String newPassword = sc.nextLine();
                    System.out.print("Confirm your new password: ");
                    String confirmNewPassword = sc.nextLine();
                    
                    if (newPassword.equals(confirmNewPassword)) {
                        PASSWORD = newPassword;
                        System.out.println("Password changed successfully!");
                    } else {
                        System.out.println("Passwords do not match. Exiting...");
                        return;
                    }
                } else {
                    System.out.println("Incorrect password. Exiting...");
                    return;
                }
            } else {
                System.out.println("Invalid choice. Exiting...");
                return;
            }
        }
        
        // MCQs selection and timer
        System.out.print("Enter the number of MCQs for the exam: ");
        int numMCQs = sc.nextInt();
        
        String[] questions = new String[numMCQs];
        String[][] options = new String[numMCQs][4];
        int[] answers = new int[numMCQs];
        
        for (int i = 0; i < numMCQs; i++) {
            sc.nextLine();
            System.out.println("Enter question " + (i+1) + ": ");
            questions[i] = sc.nextLine();
            System.out.println("Enter option 1: ");
            options[i][0] = sc.nextLine();
            System.out.println("Enter option 2: ");
            options[i][1] = sc.nextLine();
            System.out.println("Enter option 3: ");
            options[i][2] = sc.nextLine();
            System.out.println("Enter option 4: ");
            options[i][3] = sc.nextLine();
            System.out.println("Enter the correct option (1-4): ");
            answers[i] = sc.nextInt();
        }
        
        long startTime = System.currentTimeMillis();
        long maxTime = 1800000; // 30 minutes in milliseconds
        
        while ((System.currentTimeMillis() - startTime))
